#!/usr/bin/env node

const cli = require('../lib/cli');

const args = cli.setup({
    usage: '<element-name>',
    options: [
        ['-f, --force', '是否覆盖']
    ],
    help: [
          '  Examples:',
          cli.chalk.gray('    # 添加一个mip组件'),
          '    $ mip add mip-element',
      ].join('\n')
});

var elementName = args[0];

if (!elementName.match(/^mip-[\w\-]+$/)) {
    cli.warn('请输入合法组件名称：mip-xxx !');
    return;
}


// 检查模板更新后启动命令
require('../lib/update').exec().then(() => {
  require('../lib/add-element').exec(elementName, cli.program.force);
});
